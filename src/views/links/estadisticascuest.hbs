<script>
const ctx = document.getElementById('myChart');
const myForm = document.forms["form"];
const arreglo = [0,0]

 
for(var i = 1 ; i <= myForm.length; i++){
    if(myForm[i-1].value < 6){
        arreglo[0] =arreglo[0]+ 1;
        
    }else{
        arreglo[1] =arreglo[1]+ 1;
    }
        
    
}

const myChart = new Chart(ctx, {
    type: 'doughnut',
    data: {
         labels: [
    'Reprobados',
    'Aprobados'
  ],
        datasets: [{
            label: 'Aciertos',
            data: arreglo,
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)',
                'rgba(153, 102, 255, 0.2)',
                'rgba(255, 159, 64, 0.2)'
            ],
            borderColor: [
                'rgba(255, 99, 132, 1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)'
            ],
            borderWidth: 1
        }]
    },
    options: {
        scales: {
        }
    }
});
</script>